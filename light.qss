#linkButton:hover {
    background-color: #1AA34A;
}
#downloadButton:hover {
    background-color: #1AA34A;
}
#folderButton:hover {
    background-color: #1AA34A;
}
#themeButton {
    background-color: #1AA34A;
}
#cancelButton:hover {
    background-color: #1AA34A;
}





#urlLabel {
    font-size: 15px;
    font-weight: bold;
    color: black;
}
#statusLabel {
    font-size: 15px;
    font-weight: bold;
    color: black;
}
#copyrightLabel {
    font-size: 10px;
    color: #303030; 
}





#qualityLabel {
    font-weight: bold;
    font-size: 15px;
    color: black;
}
#qualityDropdown {
    font-size: 14px;
    color: #333333;
    background-color: #DEDFDE;
    border: 1px solid #303030;
    border-radius: 5px;
    padding: 5px;
}
#qualityDropdown::drop-down {
    border: none;
}
#qualityDropdown QAbstractItemView {
    color: black; 
}




